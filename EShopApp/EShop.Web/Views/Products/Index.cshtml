@model List<EShop.Web.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="m-3">
    <a class="btn btn-success" asp-controller="Products" asp-action="Create">Add new product</a>
</div>

@for(int i=0; i<Model.Count; i++)
{
    var item = Model[i];
    if (i % 3 == 0)
    {
        @: <div class="row">
    }

    <div class="col-3 m-4">
        <div class="card" style="width: 18rem; height: 35rem">
            <img class="card-img-top" src="@item.Image" alt="Product image">
            <div class="card-body">
                <h5 class="card-title">@item.ProductName</h5>
                <p class="card-text">@item.ProductDescription</p>
                    <p class="card-text">@item.Price MKD</p>
                    <div class="btn btn-primary">
                        <a style="color: white" asp-action="Edit" asp-route-id="@item.id">Edit</a>
                </div>
                    <div class="btn btn-primary">
                        <a style="color: white" asp-action="Details" asp-route-id="@item.id">Details</a>
                </div>
                <div class="btn btn-primary">
                        <a style="color: white" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </div>
            </div>
        </div>
    </div>
}